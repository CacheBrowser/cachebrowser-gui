#p-home.p-base.p-fill
    header
        .title.cb-font   CacheBrowser

    .row
        .col-xs-6

            .panel.borderless
                .panel-body.sm-padding
                    .status-box.alert(ng-class="'alert-'+runningStatus.color()") CacheBrowser is #[span(ng-if="cbStatus != 'running'") not] running
                    button.btn.btn-block.bold(ng-class="'btn-'+runningStatus.invertedColor()" ng-click="toggleProcess()")
                        | {{runningStatus.actionMessage()}} Cachebrowser
            .panel.borderless
                .panel-heading
                    .panel-title
                        span.bold Install Browser Plugins
                .panel-body
                    .browser-icon-container
                        a(ng-href="#/browser/chrome")
                            i.browser-icon.fa.fa-4x.fa-chrome
                        a(ng-href="#/browser/firefox")
                            i.browser-icon.fa.fa-4x.fa-firefox



        .col-xs-6
            .panel.news.borderless
                .panel-heading
                    .panel-title
                        span.bold Whats New?
                .panel-body

